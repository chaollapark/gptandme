{
  "manifest_version": 3,
  "name": "ChatGPT Query Counter",
  "version": "1.0.0",
  "description": "Counts how many prompts you send to ChatGPT. That's it.",
  "permissions": ["storage", "webRequest"],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Query count"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
